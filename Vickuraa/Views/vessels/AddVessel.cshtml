@model Vickuraa.Models.vessel

@*@{
        ViewBag.Title = "Add Vessel";
    }*@


<h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-ios-gear"></i>Add Vessel </span></h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            @Html.LabelFor(model => model.ownerID, "Owner", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ownerID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ownerID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.vesselName, "Vessel", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.vesselName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.vesselName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VesselRegNo, "Vessel Registory No", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.VesselRegNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.VesselRegNo, "", new { @class = "text-danger" })
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.availWeight, "Weight", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.availWeight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.availWeight, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.availVolume, "Volume", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.availVolume, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.availVolume, "", new { @class = "text-danger" })
        </div>







        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="submit" value="View List" class="btn btn-warning" />
            </div>
        </div>
    </div>
}


