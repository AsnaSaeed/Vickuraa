
<h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-ios-search"></i>Search Vessel Schedule</span></h1>


@using (@Html.BeginForm("searchconfirm", "bookings", FormMethod.Post))
{
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label>Travelling From</label>
            @Html.DropDownList("fromID", (IEnumerable<SelectListItem>)ViewBag.destinations, "From", new { @class = "form-control" })
        </div>
    </div>

    <div class="col-md-4">
        <div class="form-group">
            <label>Travelling To</label>
            @Html.DropDownList("toID", (IEnumerable<SelectListItem>)ViewBag.destinations, "To", new { @class = "form-control" })
        </div>   
        </div>

    <div class="col-md-4">
        <div class="form-group">
            <label>Schedule Date</label>
            @Html.Editor("date", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }
