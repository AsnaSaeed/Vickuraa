@model IEnumerable<Vickuraa.Models.schedule>
<h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-ios-bolt"></i>Vessel Schedule</span></h1>


<div>
    <div style="background-color: lightgray;padding: 20px 10px 20px 10px; text-align: center;">
        @ViewBag.date <br />
    </div>

    <div style="text-align: center; padding-top: 10px;"> @ViewBag.From <strong>TO</strong> @ViewBag.To</div>



    <table id="example" class="table table-striped table-bordered" style="width:100%; text-align: center; padding: 10px;">
        <thead>
            <tr>
                <th>Vessel Name</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in ViewBag.schedulelist)
            {
            <tr>

                @*<td><a href="/bookings/viewDetails?vesselids=@x.vessel.vesselID">@x.vessel.vesselName</a></td>*@
                <td><a>@x.vessel.vesselName</a></td>
                <td><a>@x.estimateDeparturetime</a></td>
                <td><a>@x.estimateArrivaltime</a></td>
                <td>
                    <a type="button" class="btn btn-warning btn-3d pull-left" href="~/bookings/sendPackage/@x.vesselID" style="margin:0 10px"><i class="fa fa-book"></i>Send Package</a>
                    <a type="button" class="btn btn-success btn-3d pull-left" href="~/bookings/PackageTimeLine/@x.vesselID" style="margin:0 10px"><i class="fa fa-clock-o"></i>Package Status</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="modal" id="my_modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

                </div>

                <div class="modal-body">

                    Vessel Name:<input style="background-color: white; border:none; text-align: center;" type="text" name="bookId" value="" disabled /><br />
                    Departure Time:<input style="background-color: white; border:none; text-align: center;" type="text" name="deptTime" value="" disabled /><br />
                    Arrival Time:<input style="background-color: white; border:none; text-align: center;" type="text" name="arrTime" value="" disabled /><br />
                    Avail. Weight:<input style="background-color: white; border:none; text-align: center;" type="text" name="availWeight" value="" disabled /><br />
                    Avail. Volume:<input style="background-color: white; border:none; text-align: center;" type="text" name="availVolume" value="" disabled /><br />
                    <input style="background-color: white; border:none; text-align: center;" type="text" name="vesselids" value="" disabled />
                </div>


                <div class="modal-footer">

                    <input type="submit" value="Select" class="btn btn-primary" />

                </div>
                }
            </div>
        </div>
    </div>
</div>


